{
    "hosting": {
        "target": "guestbot",
        "public": "dist",
        "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
        "rewrites": [
            {
                "source": "/chat",
                "destination": "/chat.html"
            },
            {
                "source": "/c/**",
                "destination": "/chat.html"
            }
        ],
        "cleanUrls": true,
        "trailingSlash": false
    }
}
