{
  "name": "guestbot",
  "version": "1.0.0",
  "description": "AI-powered guest concierge for vacation rentals",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "deploy": "npm run build && firebase deploy --only hosting",
    "deploy:all": "npm run build && firebase deploy",
    "deploy:functions": "firebase deploy --only functions",
    "deploy:rules": "firebase deploy --only firestore:rules",
    "generate-og": "node scripts/generate-og-image.js",
    "lint": "eslint . --ext .js,.html --ignore-pattern 'dist/**'",
    "lint:fix": "eslint . --ext .js,.html --fix --ignore-pattern 'dist/**'",
    "format": "prettier --write \"**/*.{js,json,html,css,md}\" --ignore-path .prettierignore",
    "format:check": "prettier --check \"**/*.{js,json,html,css,md}\" --ignore-path .prettierignore",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:ci": "node --experimental-vm-modules node_modules/jest/bin/jest.js --ci --coverage",
    "validate": "npm run lint && npm run test",
    "prepare": "husky",
    "emulators": "firebase emulators:start",
    "emulators:export": "firebase emulators:export ./emulator-data"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-html": "^8.0.0",
    "firebase-admin": "^13.6.0",
    "husky": "^9.0.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.0",
    "sharp": "^0.34.5",
    "vite": "^5.0.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,html,css,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=20"
  }
}
